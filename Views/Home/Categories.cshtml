@model Category
<div class="d-flex flex-column align-items-center mt-4 gap-5">
    <div class="d-flex flex-row justify-content-center align-items-center">
        <h1> <a href="/products">Products</a> | Categories</h1>
    </div>

    <div class="container-fluid row">
        <form class="col-6" action="/categories/create" method="post">
            <h2 class="row">New Category</h2>
            <div class="row w-50 g-2">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" type="text">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <input type="submit" class="btn btn-primary row mt-2" placeholder="Create">
        </form>
        <div class="col-6">
            <h2>Existing Products</h2>
            @{
                foreach(Category category in ViewBag.Categories)
                {
                    <a class="d-block" href="/categories/@category.CategoryId">@category.Name</a>
                }
            }
        </div>
    </div>
</div>